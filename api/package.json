{
  "name": "@gram/api",
  "private": true,
  "version": "3.1.2",
  "description": "API for threat modelling",
  "scripts": {
    "start": "NODE_ENV=development nodemon --watch src --watch ../core/src --files src/index.ts",
    "build": "npm run compile",
    "clean": "rimraf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "lint": "prettier --check src/",
    "lint-fix": "prettier -l src/ --write",
    "debug": "NODE_ENV=development node --inspect=0.0.0.0 src/index.js",
    "test": "NODE_CONFIG_DIR=../config/ NODE_ENV=test jest --detectOpenHandles --no-cache --runInBand --logHeapUsage --forceExit",
    "snyk": "snyk test",
    "jest": "NODE_ENV=test jest --detectOpenHandles --no-cache",
    "sender": "NODE_ENV=development ts-node src/notifications/sender.ts",
    "gh": "ts-node src/packs/demo/test.ts"
  },
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klarna/gram.git"
  },
  "keywords": [
    "threat model",
    "appsec"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/klarna/gram/issues"
  },
  "homepage": "https://github.com/klarna/gram#readme",
  "engines": {
    "node": "16"
  },
  "dependencies": {
    "@gram/config": "^3.1.2",
    "@gram/core": "^3.1.2",
    "@sentry/integrations": "^7.6.0",
    "@sentry/node": "^7.6.0",
    "@sentry/tracing": "^7.6.0",
    "emailjs": "^3.7.0",
    "express": "^4.17.1",
    "express-async-error-wrapper": "^1.0.4",
    "express-physical": "^2.0.0",
    "express-prom-bundle": "^6.4.1",
    "handlebars": "^4.7.7",
    "helmet": "^6.0.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "log4js": "^6.6.1",
    "node-fetch": "^2.6.7",
    "tslib": "^2.3.1",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/lodash": "^4.14.177",
    "@types/node": "^14.17.9",
    "@types/node-cron": "^3.0.2",
    "@types/node-fetch": "^2.5.12",
    "@types/supertest": "^2.0.11",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.3.2",
    "snyk": "^1.760.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2"
  }
}
