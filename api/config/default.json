{
  "appPort": 8080,
  "controlPort": 8081,
  "origin": "http://localhost:4726",

  "secrets": {
    "provider": "config"
  },

  "jwt": {
    "ttl": 86400,
    "secret": {
      "auth": "NOT BASE64. SHOULD CRASH. SORRY. DONT USE DEFAULT VALUES <3",
      "csrf": "NOT BASE64. SHOULD CRASH. SORRY. DONT USE DEFAULT VALUES <3"
    }
  },

  "auth": {
    "providerOpts": {}
  },

  "log": {
    "layout": "json",
    "level": "info",

    "auditHttp": {
      "excludeKeys": {
        "header": ["authorization", "x-google-id-token", "cookie"],
        "body": ["token"]
      },
      "includeKeys": {
        "header": ["user-agent", "host", "referer", "cache-control", "pragma"]
      },
      "simplified": false
    }
  },

  "cors": {
    "origin": "http://localhost:4726/",
    "credentials": true
  },

  "cookie": {
    "secure": false,
    "httpOnly": true
  }
}
