{
  "name": "gram",
  "description": "",
  "scripts": {
    "test": "lerna run test",
    "build": "lerna run --scope=@gram/api --scope=@gram/app --include-dependencies build",
    "build-all": "lerna run build",
    "dev": "lerna run start --parallel",
    "snyk": "lerna run snyk",
    "lint": "lerna run lint",
    "clean": "lerna run clean",
    "lint-fix": "lerna run lint-fix",
    "start-frontend": "npm run -w app start",
    "start-backend": "npm run -w api start",
    "docker-start": "NODE_ENV=$SERVICE_STAGE node core/dist/data/migrate.js && NODE_CONFIG_DIR=./config/ NODE_CONFIG_STRICT_MODE=true NODE_ENV=$SERVICE_STAGE SERVE_FRONTEND=yesplease node api/dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klarna-incubator/gram.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/klarna-incubator/gram/issues"
  },
  "homepage": "https://github.com/klarna-incubator/gram#readme",
  "workspaces": [
    "app",
    "api",
    "core",
    "config",
    "plugins/*"
  ],
  "private": true,
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^20.4.2",
    "conventional-changelog-cli": "^2.2.2",
    "jest": "^29.4.1",
    "jest-mock": "^29.4.1",
    "lerna": "^6.4.1",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5",
    "prettier": "^2.3.2"
